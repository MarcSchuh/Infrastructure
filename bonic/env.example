# BOINC Configuration
BOINC_VERSION=latest
BOINC_CONTAINER_NAME=boinc
RESTART_POLICY=unless-stopped

# Resource Limits
BOINC_MEM_LIM=2G
BOINC_CPU_LIM=2
BOINC_MEM_RES=512M
BOINC_CPU_RES=1

# Data Directory
BOINC_DATA_DIR=/opt/appdata/boinc

# Authentication
BOINC_GUI_RPC_PASSWORD=super-secret-password
BOINC_USERNAME=your_username
BOINC_EMAIL=your_email@example.com

# Project Configuration
BOINC_PROJECTS=https://www.worldcommunitygrid.org/
BOINC_PROJECT_KEYS=obtained-from-https://www.worldcommunitygrid.org/ms/viewMyProfile.do
