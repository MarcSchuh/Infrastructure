# Jumphost Configuration
# IMPORTANT: Never commit the actual .env file to version control!

# Container Settings
JUMPHOST_NAME=jumphost
SSH_SERVER_VERSION=latest
RESTART_POLICY=unless-stopped

# Resource Limits
JUMPHOST_MEM_LIM=512M
JUMPHOST_CPU_LIM=0.5

# Port Configuration
SSH_PORT=1234
JUMP_PORT=5678

# User Configuration
JUMPHOST_USER=jumphost
PUID=1000
PGID=1000
TZ=Europe/Berlin

# Directory Configuration
CONFIG_DIR=/path/to/jumphost/config

# Security Settings
PASSWORD_ACCESS=false  # Enforce key-based authentication only
